{
  "name": "url-shortener-server",
  "version": "1.0.0",
  "description": "Server portion of the URL shortener",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --exec babel-node src/app.js",
    "build": "npm run clean && babel ./ --out-dir dist/ --ignore ./node_modules --copy-files",
    "deploy": "npm run build && node dist/src/app.js",
    "clean": "rimraf dist/"
  },
  "author": "mladenbrankovic",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cors": "^2.8.5",
    "date-fns": "^2.15.0",
    "express": "^4.17.1",
    "shortid": "^2.2.15",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "valid-url": "^1.0.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.0",
    "babel-plugin-root-import": "^6.5.0",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2"
  }
}
